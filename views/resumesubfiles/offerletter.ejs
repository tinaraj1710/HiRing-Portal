<!-- offerletter modal -->
<% if(CurrentUser.role === "employer"){ %>
<div class="modal fade bd-sendofferletter-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div id="modal-content" class="modal-content">
			  <div id="modal-header-1" class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Send Offer Letter</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
				  <span aria-hidden="true">&times;</span>
				</button>
			  </div>
		      <form action="/createjob/<%= CurrentUser._id %>" method="POST" enctype="multipart/form-data">
			      <div id="workexp-modal-body" class="modal-body">
				    <div id="first-form-row" class="form-row">
					   <div class="form-group col-md-6">
						  <label for="offer-title" class="col-form-label">Job Position</label>
						  <input type="text" class="form-control" id="offer-title" name="position">
					   </div>
					   <div class="form-group col-md-6">
						  <label for="expdate" class="col-form-label">Expiring Date</label>
						  <input type="date" class="form-control" id="expdate" name="expdate">
					   </div>
					 </div>
				     <div id="second-form-row" class="form-row">
						<div class="form-group col-md-6">
							<label for="recipient-name" class="col-form-label">Select Document</label>
						 <input type="file" class="form-control" id="recipient-name" name="filedata" multiple>
					   </div>
				     </div>
					  <div id="text-area-fleld" class="form-group">
						<label for="message-text" class="col-form-label">Description</label>
						<textarea class="form-control" id="message-text" rows="5" name="text"></textarea>
					  </div>
					  <div id="text-area-fleld" class="form-group">
						<label for="message-text" class="col-form-label">Comments</label>
						<textarea class="form-control" id="message-text" rows="3" name="comment"></textarea>
					  </div>
					   <div id="second-form-row" class="form-row">
						   <div class="form-group col-md-6">
							  <label for="email" class="col-form-label">Candidate Email</label>
							  <input type="email" class="form-control" id="email" name="email" value="<%= user.local.email %>" disabled>
						   </div>
					   </div>
					  <div class="d-flex justify-content-center">
						  <button id="save-button-modal" type="submit" class="btn btn-sm btn-primary">Send Offer Letter</button>
					  </div>
			     </div>
			    </form>
			</div>
	</div>
</div>
<% } %>




<!-- offerletter modal -->
<% include ../functions/textcontent %>

<% if(CurrentUser.role === textemployer() || CurrentUser.role === textconsultant()){ %>
<div class="modal fade bd-job-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div id="modal-content" class="modal-content">
		<div class="preloader-all-pages main-loader-div">
		  <svg class="loading-box">
              <circle class="loader" fill="none" stroke-width="3" stroke-linecap="round" cx="24" 
					cy="24" r="17"></circle>
           </svg>
        </div>
			    <h5 id="employer-send-offerletter-page" id="exampleModalLabel">Send Offer Letter</h5>
				<button id="employer-send-offerletter-page-button" type="button" class="close" 
						data-dismiss="modal" aria-label="Close">
				  <span aria-hidden="true">&times;</span>
				</button>
		      <form  class="submit-forms" id="send-offerletter-for-offerletter-page" action="/createjob/<%= CurrentUser._id %>" method="POST" 
					enctype="multipart/form-data">
			      <div id="workexp-modal-body" class="modal-body">
				    <div id="first-form-row" class="form-row">
					   <div class="form-group col-md-6">
						  <label for="offer-title" class="col-form-label">Job Position</label>
						  <input type="text" class="form-control" id="offer-title" name="position">
					   </div>
					  </div>
					  <div id="second-form-row" class="form-row">
						   <div class="form-group col-md-6">
							  <label for="email" class="col-form-label">Candidate Email</label>
							  <input type="email" class="form-control" id="email" name="email" required>
						   </div>
						   <div class="form-group col-md-6">
							  <label for="expdate" class="col-form-label">Expiring Date</label>
							  <input type="date" class="form-control" id="expdate" name="expdate" required>
					       </div>
					   </div>
					   <div id="text-area-fleld" class="form-group">
						  <label for="message-text" class="col-form-label">Description</label>
						  <textarea class="form-control" id="message-text" rows="5" name="text" required></textarea>
					   </div>
					   <div id="input-file-of-attachment" class="form-row">
						   <button id="each-offerletter-button-accept-3" type="button" class="btn btn-sm btn-primary">
							  <label for="attach-file-session" id="attachment-label-offerletter-page" class="col-form-label"> 
								  <img id="attchment-file-new-send-offerletter" src="/images/main-pages/white-attach-file.svg"                                                alt="attchment-image" > Attachfile </label>  
							 <input type="file" class="d-none form-control" id="attach-file-session" name="filedata" multiple required>
						   </button>
						   <p id="attachment-text">No Files choosen, Yet.</p>
				       </div>
					  <div class="send-offerletter-shortcut-div d-flex justify-content-center">
						  <button id="each-offerletter-button-accept-3" type="submit" class="btn btn-sm btn-primary">Send Offer Letter</button>
					  </div>
			     </div>
			    </form>
			</div>
	</div>
</div>
<% } %>


